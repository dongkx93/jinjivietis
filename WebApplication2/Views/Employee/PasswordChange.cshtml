@using WebApplication2.Models.Login
@{
    Layout = "~/Views/Shared/_EmployeeLayoutPage.cshtml";
    EmployeeLoginOutput employee = (EmployeeLoginOutput)Session["employee"];
    string salaryMonth = (string)TempData["SalaryMonth"];
}
<!-- Text input-->
<div class="col-sm-9 employee-changepassword">
    <h2 class="text-primary">パスワード変更</h2>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @if (null != TempData["SuccessMessage"])
    {
        <div class="text-primary">@TempData["SuccessMessage"].ToString()</div>
    }
    @using (Html.BeginForm("PasswordChange", "Info", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class="col-md-4 control-label" for="新しいパスワード">新しいパスワード</label>
            <div class="col-md-4">
                <div class="input-group">
                    @Html.Password("NewPassword","" ,new { @placeholder= "新しいパスワード", @class= "form-control input-md" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="現在パスワード">現在パスワード</label>
            <div class="col-md-4">
                <div class="input-group">
                    @Html.Password("Password","" ,new { @placeholder= "現在パスワード", @class= "form-control input-md" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="確認パスワード">確認パスワード</label>
            <div class="col-md-4">
                <div class="input-group">
                    @Html.Password("ConfirmPassword" ,"" ,new {@placeholder= "確認パスワード", @class= "form-control input-md" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 col-md-offset-4">
                <input type="submit" value="送信" class="btn btn-success" />
            </div>
        </div>
    }
</div>
