@{
    Layout = null;
}
@model WebApplication2.Models.Login.EmployeeLoginInput
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - マイ ASP.NET アプリケーション</title>
    @Styles.Render("~/Content/loginCss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="top-content">
        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>VIETIS人材管理システムログイン</h3>
                                <p>ユザーネーム、パスワードを入力ください:</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-key"></i>
                            </div>
                        </div>
                        @Html.ValidationSummary(false , "" , new { @class="text-danger"})
                        <div class="form-bottom">
                            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @role = "form", @class="login-form"}))
                            {
                            <div class="form-group">
                                <label class="sr-only" for="form-username">ユーザネーム</label>
                                @Html.TextBoxFor(m =>m.UserName, new { @class= "form-username form-control" , @id = "form-username", @placeholder = "ユーザネーム..." })
                            </div>
                                <div class="form-group">
                                    <label class="sr-only" for="form-password">パスワード</label>
                                    @Html.PasswordFor(m => m.PassWord, new { @class = "form-password form-control", @id = "form-password", @placeholder = "パスワード..." })
                                </div>
                                <input type="submit" class="btn" value="ログイン" />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
